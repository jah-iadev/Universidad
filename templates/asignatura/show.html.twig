                <th>Creditos</th>
                <td>{{ asignatura.aula.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_asignatura_index') }}">Volver a la lista</a>

    <a class="btn btn-info" href="{{ path('app_asignatura_edit', {'id': asignatura.id}) }}">Editar</a>

    {{ include('asignatura/_delete_form.html.twig') }}
</div>

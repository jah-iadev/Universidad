{% block title %}Asignatura{% endblock %}

{% block body %}
<div class="container">    
    <h1>Asignatura</h1>

    <table class="table table-info">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ asignatura.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ asignatura.nombre }}</td>
            </tr>
            <tr>
                <th>Creditos</th>
                <td>{{ asignatura.creditos }}</td>
            </tr>

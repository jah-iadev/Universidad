{% extends 'base.html.twig' %}

{% block title %}Matricula{% endblock %}

{% block body %}
<div class="container">
    <h1>Matricula</h1>

    <table class="table table-info">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ matricula.id }}</td>
            </tr>
            <tr>
                <th>Curso</th>
                <td>{{ matricula.curso }}</td>
            </tr>
            <tr>
                <th>Alumno</th>
                <td>{{ matricula.alumno.nombre }}</td>
            </tr>
            <tr>
                <th>Curso</th>
                <td>{{ matricula.asignatura.nombre }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_matricula_index') }}">Volver al listado</a>

    <a class="btn btn-info" href="{{ path('app_matricula_edit', {'id': matricula.id}) }}">Editar</a>

    {{ include('matricula/_delete_form.html.twig') }}
</div>
{% endblock %}

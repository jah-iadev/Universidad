{% extends 'base.html.twig' %}

{% block title %}Alumno{% endblock %}

{% block body %}
<div class="container">
    <h1>Alumno</h1>

    <table class="table table-info">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ alumno.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ alumno.nombre }}</td>
            </tr>
            <tr>
                <th>Apellido</th>
                <td>{{ alumno.apellido }}</td>
            </tr>
            <tr>
                <th>Telefono</th>
                <td>{{ alumno.telefono }}</td>
            </tr>
            <tr>
                <th>Correo</th>
                <td>{{ alumno.correo }}</td>
            </tr>
            <tr>
                <th>FechaNacimiento</th>
                <td>{{ alumno.fechaNacimiento ? alumno.fechaNacimiento|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('app_alumno_index') }}">Volver al listado</a>

    <a class="btn btn-info" href="{{ path('app_alumno_edit', {'id': alumno.id}) }}">Editar</a>

    {{ include('alumno/_delete_form.html.twig') }}
</div>
{% endblock %}
